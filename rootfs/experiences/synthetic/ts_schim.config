amount_of_bombs=3
bombing_mode=read
## SchIM
scheduling_policy=ts
mit_core_0=1
mit_core_1=32
mit_core_2=32
mit_core_3=32
threshold_core_0=0
threshold_core_1=2
threshold_core_2=2
threshold_core_3=2
